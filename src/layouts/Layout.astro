---
const {
	title = 'Pila | Finanzas personales simples',
	description = 'Pila presenta la forma m√°s clara de ordenar tus finanzas personales.',
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
		<meta name="format-detection" content="telephone=no" />
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	:root {
		font-family: 'Space Grotesk', Inter, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
			sans-serif;
		color: #0f0f15;
		background-color: #f6f5ff;
		--brand: #6e57e8;
		--brand-dark: #4a33c7;
		--text: #0f0f15;
		--muted: #565570;
		--surface: #ffffff;
		--surface-alt: #f2efff;
	}

	* {
		box-sizing: border-box;
		-webkit-tap-highlight-color: transparent;
	}

	html {
		-webkit-text-size-adjust: 100%;
		-moz-text-size-adjust: 100%;
		text-size-adjust: 100%;
	}

	html,
	body {
		width: 100%;
		max-width: 100%;
		margin: 0;
		padding: 0;
		background-color: #f6f5ff;
		color: inherit;
		overflow-x: hidden;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	body {
		min-height: 100vh;
		min-height: -webkit-fill-available;
	}

	img {
		max-width: 100%;
		height: auto;
		display: block;
	}

	a {
		-webkit-tap-highlight-color: rgba(110, 87, 232, 0.3);
	}
</style>
