---
interface FeatureItem {
  icon: string;
  title: string;
  copy: string;
}

interface Props {
  eyebrow: string;
  title: string;
  description: string;
  items: FeatureItem[];
}

const { eyebrow, title, description, items = [] } = Astro.props as Props;
---

<section class="features" id="features" aria-label="Beneficios principales">
  <div class="section-heading">
    <p class="eyebrow">{eyebrow}</p>
    <h2>{title}</h2>
    <p>{description}</p>
  </div>
  <div class="feature-grid">
    {items.map((feature) => (
      <article>
        <span class="icon">{feature.icon}</span>
        <h3>{feature.title}</h3>
        <p>{feature.copy}</p>
      </article>
    ))}
  </div>
</section>

<style>
  .features {
    display: grid;
    gap: clamp(2rem, 5vw, 3rem);
    width: 100%;
  }

  .section-heading h2 {
    margin: 0 0 0.5rem;
    font-size: clamp(2rem, 3vw, 2.6rem);
  }

  .section-heading p {
    color: var(--muted);
    max-width: 60ch;
    margin: 0;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.75rem;
    color: var(--brand);
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: clamp(1.25rem, 4vw, 2rem);
  }

  .feature-grid article {
    background: var(--surface);
    border-radius: 1.1rem;
    padding: 1.5rem;
    border: 1px solid rgba(110, 87, 232, 0.08);
  }

  .icon {
    font-size: 1.6rem;
    display: inline-flex;
    width: 3rem;
    height: 3rem;
    align-items: center;
    justify-content: center;
    background: rgba(110, 87, 232, 0.12);
    border-radius: 0.9rem;
    margin-bottom: 1rem;
  }

  .feature-grid h3 {
    margin: 0 0 0.4rem;
  }

  .feature-grid p {
    margin: 0;
    color: var(--muted);
  }

  @media (max-width: 700px) {
    .section-heading {
      text-align: left;
    }

    .section-heading p {
      max-width: none;
    }
  }

  @media (max-width: 640px) {
    .feature-grid {
      grid-template-columns: minmax(0, 1fr);
    }

    .feature-grid article {
      padding: 1.25rem;
    }

    .icon {
      width: 2.75rem;
      height: 2.75rem;
    }
  }
</style>
