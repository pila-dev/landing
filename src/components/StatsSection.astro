---
interface StatItem {
  label: string;
  value: string;
}

const { items = [] } = Astro.props as { items: StatItem[] };
---

<section class="stats">
  {items.map((item) => (
    <article>
      <strong>{item.value}</strong>
      <p>{item.label}</p>
    </article>
  ))}
</section>

<style>
  .stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: clamp(1rem, 3vw, 1.5rem);
    background: var(--surface);
    border-radius: 1.3rem;
    padding: clamp(1.5rem, 4vw, 2.25rem);
    box-shadow: 0 8px 30px rgba(15, 15, 21, 0.05);
    width: 100%;
  }

  .stats article {
    text-align: center;
  }

  .stats strong {
    display: block;
    font-size: 2rem;
    color: var(--brand);
  }

  .stats p {
    margin: 0;
    color: var(--muted);
  }

  @media (max-width: 640px) {
    .stats {
      grid-template-columns: minmax(0, 1fr);
      text-align: center;
      padding: 1.25rem;
    }

    .stats strong {
      font-size: 1.75rem;
    }
  }
</style>
