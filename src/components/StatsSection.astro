---
interface StatItem {
  label: string;
  value: string;
}

const { items = [] } = Astro.props as { items: StatItem[] };
---

<section class="stats">
  {items.map((item) => (
    <article>
      <strong>{item.value}</strong>
      <p>{item.label}</p>
    </article>
  ))}
</section>

<style>
  .stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    background: var(--surface);
    border-radius: 1.3rem;
    padding: 2rem;
    box-shadow: 0 8px 30px rgba(15, 15, 21, 0.05);
  }

  .stats article {
    text-align: center;
  }

  .stats strong {
    display: block;
    font-size: 2rem;
    color: var(--brand);
  }

  .stats p {
    margin: 0;
    color: var(--muted);
  }

  @media (max-width: 900px) {
    .stats {
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      padding: 1.5rem;
    }
  }
</style>
