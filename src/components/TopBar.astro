---
import logo from '../assets/logo_pila_blanco.png';
---

<header class="top-bar">
  <div class="top-bar__inner">
    <div class="top-bar__logo">
      <img src={logo.src} alt="Logo Pila" loading="lazy" />
    </div>
  </div>
</header>

<style>
  .top-bar {
    background: linear-gradient(120deg, #7f6af0, #5b42d6);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 10;
    box-shadow: 0 20px 45px rgba(29, 17, 86, 0.25);
  }

  .top-bar__inner {
    width: min(1200px, 100%);
    margin: 0 auto;
    padding: 0 clamp(2rem, 6vw, 8rem);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .top-bar__logo img {
    height: 32px;
    display: block;
  }

  @media (max-width: 640px) {
    .top-bar {
      position: static;
    }

    .top-bar__inner {
      padding: 0 clamp(1.5rem, 8vw, 2.5rem);
    }
  }
</style>
