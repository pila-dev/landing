---
import type { ImageMetadata } from 'astro';

interface Props {
  eyebrow: string;
  title: string;
  description: string;
  ctaApple: ImageMetadata;
  ctaAndroid: ImageMetadata;
  capture: ImageMetadata;
}

const { eyebrow, title, description, ctaApple, ctaAndroid, capture } = Astro.props;
---

<section class="hero">
  <div class="hero__content">
    <p class="eyebrow">{eyebrow}</p>
    <h1>{title}</h1>
    <p class="lede">{description}</p>
    <div class="hero__actions">
      <a href="#cta" aria-label="Descargar la versión de iOS">
        <img src={ctaApple.src} alt="Disponible en App Store" loading="lazy" />
      </a>
      <a href="#cta" aria-label="Descargar la versión de Android">
        <img src={ctaAndroid.src} alt="Disponible en Google Play" loading="lazy" />
      </a>
    </div>
  </div>
  <div class="hero__card" id="demo">
    <img src={capture.src} alt="Captura del tablero de finanzas de Pila" class="hero__screenshot" loading="lazy" />
  </div>
</section>

<style>
  @keyframes float {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
    100% {
      transform: translateY(0);
    }
  }

  .hero {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
    align-items: center;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.75rem;
    color: var(--brand);
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .hero__content h1 {
    font-size: clamp(2.2rem, 4.5vw, 3.6rem);
    margin: 0 0 1rem;
    line-height: 1.05;
  }

  .lede {
    font-size: 1.1rem;
    color: var(--muted);
    margin: 0 0 1.5rem;
    max-width: 46ch;
  }

  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    margin-bottom: 1rem;
  }

  .hero__actions a {
    display: inline-flex;
  }

  .hero__actions img {
    height: 52px;
    width: auto;
    display: block;
  }

  .hero__card {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero__screenshot {
    width: 100%;
    max-width: 400px;
    display: block;
    animation: float 8s ease-in-out infinite;
  }

  @media (max-width: 900px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero__content,
    .hero__actions {
      justify-content: center;
    }

    .hero__actions {
      margin-top: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .hero__actions img {
      height: 46px;
    }

    .hero__screenshot {
      max-width: 260px;
    }
  }
</style>
