---
import type { ImageMetadata } from 'astro';

interface Props {
  eyebrow: string;
  title: string;
  description: string;
  ctaApple: ImageMetadata;
  ctaAndroid: ImageMetadata;
  capture: ImageMetadata;
}

const { eyebrow, title, description, ctaApple, ctaAndroid, capture } = Astro.props;
---

<section class="hero">
  <div class="hero__content">
    <div class="hero__text">
      <p class="eyebrow">{eyebrow}</p>
      <h1>{title}</h1>
      <p class="lede">{description}</p>
    </div>
    <div class="hero__card" id="demo">
      <img src={capture.src} alt="Captura del tablero de finanzas de Pila" class="hero__screenshot" loading="lazy" decoding="async" />
    </div>
    <div class="hero__actions">
      <a href="#cta" aria-label="Descargar la versión de iOS" rel="noopener">
        <img src={ctaApple.src} alt="Disponible en App Store" loading="lazy" decoding="async" />
      </a>
      <a href="#cta" aria-label="Descargar la versión de Android" rel="noopener">
        <img src={ctaAndroid.src} alt="Disponible en Google Play" loading="lazy" decoding="async" />
      </a>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
    100% {
      transform: translateY(0);
    }
  }

  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: clamp(2rem, 5vw, 3.5rem);
    align-items: center;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
  }

  .hero__content {
    display: contents;
  }

  .hero__text {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    grid-column: 1 / 2;
    grid-row: 1 / 2;
    min-width: 0;
    max-width: 100%;
  }

  .hero__card {
    display: flex;
    justify-content: center;
    align-items: center;
    grid-column: 2 / 3;
    grid-row: 1 / 3;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.75rem;
    color: var(--brand);
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .hero__content h1 {
    font-size: clamp(1.75rem, 4.5vw, 3.6rem);
    margin: 0 0 1rem;
    line-height: 1.1;
  }

  .lede {
    font-size: clamp(1rem, 2vw, 1.1rem);
    color: var(--muted);
    margin: 0 0 1.5rem;
    max-width: 46ch;
    line-height: 1.5;
  }

  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.8rem;
    margin-bottom: 1rem;
    align-items: center;
    grid-column: 1 / 2;
    grid-row: 2 / 3;
    align-self: start;
  }

  .hero__actions a {
    display: inline-flex;
    -webkit-tap-highlight-color: rgba(110, 87, 232, 0.3);
    touch-action: manipulation;
    min-height: 44px;
    min-width: 44px;
  }

  .hero__actions img {
    height: 52px;
    width: auto;
    display: block;
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none;
  }

  .hero__screenshot {
    width: 100%;
    max-width: 400px;
    height: auto;
    display: block;
    animation: float 8s ease-in-out infinite;
    -webkit-user-drag: none;
    -khtml-user-drag: none;
    -moz-user-drag: none;
    -o-user-drag: none;
    user-drag: none;
  }

  @media (max-width: 900px) {
    .hero {
      grid-template-columns: 1fr;
    }

    .hero__content {
      display: flex;
      flex-direction: column;
      text-align: center;
    }

    .hero__text {
      order: 1;
    }

    .hero__card {
      order: 2;
      margin: 1.5rem 0;
    }

    .hero__actions {
      order: 3;
      grid-column: unset;
      grid-row: unset;
      align-self: unset;
      justify-content: center;
    }

    .hero__text {
      grid-column: unset;
      grid-row: unset;
    }

    .hero__card {
      grid-column: unset;
      grid-row: unset;
    }
  }

  @media (max-width: 640px) {
    .hero {
      gap: 1.5rem;
    }

    .hero__content {
      text-align: left;
      align-items: center;
    }

    .hero__text {
      order: 1;
      align-self: flex-start;
    }

    .hero__card {
      order: 2;
      margin: 1rem 0;
    }

    .hero__actions {
      order: 3;
      width: 100%;
      justify-content: center;
      gap: 0.75rem;
      align-self: center;
    }

    .hero__actions a {
      flex: 0 1 auto;
      max-width: 180px;
    }

    .hero__actions img {
      width: 100%;
      height: auto;
    }

    .hero__screenshot {
      max-width: 320px;
    }
  }

  @media (max-width: 480px) {
    .hero__content h1 {
      font-size: 1.65rem;
      line-height: 1.15;
    }

    .lede {
      font-size: 0.95rem;
    }

    .hero {
      gap: 1rem;
    }

    .hero__card {
      margin: 0.75rem 0;
    }

    .hero__actions {
      gap: 0.5rem;
    }

    .hero__actions a {
      flex: 0 1 auto;
      max-width: 160px;
    }

    .hero__actions img {
      height: 45px;
      width: auto;
      max-width: 100%;
    }

    .hero__screenshot {
      max-width: 280px;
    }
  }

  @media (max-width: 360px) {
    .hero__content h1 {
      font-size: 1.5rem;
    }

    .lede {
      font-size: 0.9rem;
    }

    .hero__actions a {
      max-width: 140px;
    }

    .hero__actions img {
      height: 42px;
    }

    .hero__screenshot {
      max-width: 240px;
    }
  }
</style>
