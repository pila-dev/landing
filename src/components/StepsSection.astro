---
interface StepItem {
  title: string;
  copy: string;
}

interface Props {
  eyebrow: string;
  title: string;
  items: StepItem[];
}

const { eyebrow, title, items = [] } = Astro.props as Props;
---

<section class="steps" id="steps" aria-label="CÃ³mo funciona">
  <div class="steps__content">
    <p class="eyebrow">{eyebrow}</p>
    <h2>{title}</h2>
    <ol class="steps__list">
      {items.map((step, index) => (
        <li>
          <div class="step-number">0{index + 1}</div>
          <div>
            <h3>{step.title}</h3>
            <p>{step.copy}</p>
          </div>
        </li>
      ))}
    </ol>
  </div>
</section>

<style>
  .steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    align-items: center;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.75rem;
    color: var(--brand);
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .steps__list {
    list-style: none;
    margin: 2rem 0 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .steps__list li {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    background: var(--surface);
    border-radius: 1rem;
    padding: 1rem;
    box-shadow: 0 10px 25px rgba(15, 15, 21, 0.05);
  }

  .step-number {
    font-weight: 700;
    color: var(--brand);
    font-size: 0.95rem;
    padding-top: 0.4rem;
  }

  @media (min-width: 768px) {
    .steps__list {
      flex-direction: row;
    }
  }

  @media (max-width: 640px) {
    .steps__list li {
      flex-direction: column;
    }
  }
</style>
