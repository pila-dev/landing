---
interface StepItem {
  title: string;
  copy: string;
  icon?: string;
}

interface Props {
  eyebrow: string;
  title: string;
  items: StepItem[];
}

const { eyebrow, title, items = [] } = Astro.props as Props;
---

<section class="steps" id="steps" aria-label="CÃ³mo funciona">
  <div class="steps__content">
    <p class="eyebrow">{eyebrow}</p>
    <h2>{title}</h2>
    <ol class="steps__list">
      {items.map((step, index) => (
        <li>
          <div class="step-number">0{index + 1}</div>
          <div class="step-content">
            {step.icon && <div class="step-icon" aria-hidden="true">{step.icon}</div>}
            <div class="step-text">
              <h3>{step.title}</h3>
              <p>{step.copy}</p>
            </div>
          </div>
        </li>
      ))}
    </ol>
  </div>
</section>

<style>
  .steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(260px, 100%), 1fr));
    gap: 2rem;
    align-items: center;
    width: 100%;
    max-width: 100%;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.75rem;
    color: var(--brand);
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .steps__list {
    list-style: none;
    margin: 3rem 0 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    position: relative;
  }

  .steps__list::before {
    content: '';
    position: absolute;
    left: 1.25rem;
    top: 0.5rem;
    bottom: 0.5rem;
    width: 2px;
    background: linear-gradient(
      180deg,
      rgba(110, 87, 232, 0),
      rgba(110, 87, 232, 0.4),
      rgba(110, 87, 232, 0)
    );
  }

  .steps__list li {
    position: relative;
    padding: 1.5rem 1.5rem 1.5rem 4rem;
    background: transparent;
  }

  .step-number {
    position: absolute;
    left: 1.25rem;
    top: 1.5rem;
    width: 2.75rem;
    height: 2.75rem;
    border-radius: 50%;
    background: var(--surface);
    border: 2px solid var(--brand);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: var(--brand);
    box-shadow: 0 8px 20px rgba(15, 15, 21, 0.08);
    transform: translate(-50%, 0);
  }

  .step-content {
    display: flex;
    gap: 1rem;
    background: var(--surface);
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 12px 30px rgba(15, 15, 21, 0.08);
  }

  .step-icon {
    width: 3rem;
    height: 3rem;
    border-radius: 1rem;
    background: var(--surface-alt);
    display: grid;
    place-items: center;
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
    color: var(--brand);
  }

  .step-text {
    flex: 1;
  }

  .step-text h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .step-text p {
    margin: 0;
    color: var(--muted);
  }

  @media (max-width: 640px) {
    .steps {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .steps__list {
      gap: 1.5rem;
      padding-left: 0;
      margin: 2rem 0 0;
    }

    .steps__list::before {
      left: 0.85rem;
    }

    .steps__list li {
      padding: 1rem 0.5rem 1rem 2.75rem;
    }

    .step-number {
      left: 0.85rem;
      width: 2.2rem;
      height: 2.2rem;
      font-size: 0.9rem;
    }

    .step-content {
      padding: 1rem;
      gap: 0.75rem;
      flex-direction: column;
      align-items: flex-start;
    }

    .step-icon {
      margin-bottom: 0;
      width: 2.5rem;
      height: 2.5rem;
      font-size: 1.25rem;
    }

    .step-text h3 {
      font-size: 1.1rem;
    }

    .step-text p {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .steps__list li {
      padding: 0.75rem 0.25rem 0.75rem 2.5rem;
    }

    .step-number {
      width: 2rem;
      height: 2rem;
      font-size: 0.85rem;
      left: 0.75rem;
    }

    .steps__list::before {
      left: 0.75rem;
    }

    .step-content {
      padding: 0.875rem;
      gap: 0.5rem;
    }

    .step-icon {
      width: 2.25rem;
      height: 2.25rem;
      font-size: 1.15rem;
    }

    .step-text h3 {
      font-size: 1rem;
      margin-bottom: 0.35rem;
    }

    .step-text p {
      font-size: 0.875rem;
      line-height: 1.5;
    }
  }

  @media (max-width: 360px) {
    .step-text h3 {
      font-size: 0.95rem;
    }

    .step-text p {
      font-size: 0.825rem;
    }
  }
</style>
